<!DOCTYPE html>
<html>
  <head>
    <title>Topuru</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= stylesheet_link_tag    'https://cdn.rawgit.com/maechabin/bootstrap-material-button-color/master/dist/cb-materialbtn.0.5.5.min.css' %>
    <%= stylesheet_link_tag    "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag    "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css" %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
         <div class="navbar-collapse">
           <ul class="nav navbar-nav">
             <li class="dropdown">
               <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown" role="button"><i class="fa fa-bars"></i> Topuru</a>
		           <ul class="dropdown-menu" role="menu">
                 <li><%= link_to content_tag(:i, t('helpers.links.root'), class: 'fa fa-home'), root_path, class: "navbar-brand" %></li>
               <% if user_signed_in? %>
                 <li><%= link_to content_tag(:i, t('helpers.links.profile'), class: 'fa fa-user-md'), edit_user_registration_path, class: "navbar-brand" %></li>
                 <li><%= link_to content_tag(:i, t('helpers.links.logout'), class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete, class: "navbar-brand" %></li>
               <% else %>
                 <li><%= link_to content_tag(:i, t('helpers.links.sign_up'), class: 'fa fa-pencil-square'), new_user_registration_path, class: "navbar-brand" %></li>
                 <li><%= link_to content_tag(:i, t('helpers.links.login'), class: 'fa fa-sign-in'), new_user_session_path, class: "navbar-brand" %></li>
               <% end %>
             </ul>
            </li>
           </ul>
         </div><!--/.nav-collapse -->
      </div>
      </nav>
    </header>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
