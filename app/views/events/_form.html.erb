<div id="event-form" class="hidden">
  <% model_class = Event %>
    <%= form_for @event, url: "#", :html => { :class => "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= label_tag :from_date, model_class.human_attribute_name(:name), class: 'control-label col-lg-2 text-left' %>
      <div class="col-lg-6 col-xs-10">
        <%= f.text_field :name, class: 'form-control', placeholder: model_class.human_attribute_name(:name) %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :currency, model_class.human_attribute_name(:currency), class: 'control-label col-lg-2 text-left' %>
      <div class="col-lg-6 col-xs-10">
        <%= f.collection_select :currency, Settings.currency, :first, :last, { selected: @event.currency }, { class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :from_date, model_class.human_attribute_name(:room_members), class: 'control-label col-lg-2 text-left' %>
      <div class="col-lg-6 col-xs-10">
        <%= f.collection_select :room_members, @members, :first, :last, { selected: @event.room_member_ids }, { multiple: true, class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :from_date, model_class.human_attribute_name(:memo), class: 'control-label col-lg-2 text-left' %>
      <div class="col-lg-8 col-xs-12">
        <%= f.text_area :memo, class: 'form-control', rows: 3, placeholder: model_class.human_attribute_name(:memo) %>
      </div>
    </div>
  <% end %>
</div>
