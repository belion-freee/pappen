<%= form_for @maxim, :html => { :class => "form-horizontal maxim" } do |f| %>
  <% if @maxim.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@maxim.errors.count, "error") %> prohibited this maxim from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @maxim.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :category, :class => 'control-label col-lg-2 col-xs-3' %>
    <div class="col-md-5 col-xs-4">
      <%= f.select :category, @category, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remark, :class => 'control-label col-lg-2 col-xs-3' %>
    <div class="col-md-10 col-xs-8">
      <%= f.text_field :remark, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, :class => 'control-label col-lg-2 col-xs-3' %>
    <div class="col-md-5 col-xs-6">
      <%= f.text_field :author, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source, :class => 'control-label col-lg-2 col-xs-3' %>
    <div class="col-md-5 col-xs-6">
      <%= f.text_field :source, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-md-2 col-xs-3' %>
    <div class="col-md-5 col-xs-8">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-xs-offset-3">
      <%= f.submit t("helpers.links.create"), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                maxims_path, :class => 'btn btn-warning' %>
    </div>
  </div>
<% end %>
